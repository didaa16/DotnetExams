@model Examen.ApplicationCore.Domain.Invitation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Invitation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateInvitation" class="control-label"></label>
                <input asp-for="DateInvitation" class="form-control" />
                <span asp-validation-for="DateInvitation" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ConfirmerInvitation" /> @Html.DisplayNameFor(model => model.ConfirmerInvitation)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FeteFK" class="control-label"></label>
                <select class="form-control" asp-for="FeteFK" asp-items="ViewBag.FeteFK"></select>
                <span asp-validation-for="FeteFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InviteFK" class="control-label"></label>
                <select class="form-control" asp-for="InviteFK" asp-items="ViewBag.InviteFK"></select>
                <span asp-validation-for="InviteFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
